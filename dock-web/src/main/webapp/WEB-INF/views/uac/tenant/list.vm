<@ui.init ["系统管理", "租户管理"], "tenants_list"/>

<@ui.layout>
<div class="row">
  <div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="panel search">
      <div class="panel-body bordered-left">
        <form  method="post" role="form" action="/customer/list.htm">
          <div class="row">
			<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 form-horizontal">
              <div class="form-group margin-bottom-10">
                <label for="fullname" class="col-md-3 control-label no-padding-right text-nowrap">租户名称：</label>
                <div class="col-md-9">
                    <input type="text" value ="${map.fullname}" name="fullname" class="form-control" placeholder="请输租户名称" onblur="filterTrim(this);"/>
                </div>
              </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 form-horizontal">
              <div class="text-align-left">
                  <button type="submit" class="btn btn-info" name="submit"><i class="fa fa-search"></i> 查询</button>
                  <button type="button" class="btn btn-default" name="reset"><i class="fa fa-undo"></i> 重置</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="panel">
      <div class="panel-body">
     	<div class="row">
		  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-horizontal">
			<div class="buttons-preview">
				<a class="btn btn-danger" href="/security/user/create"><i class="fa fa-plus"></i> 新增 </a>
			</div>
		  </div>
	    </div>
	    <div class="row">
	      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-horizontal">
	        <table width="100%" class="table table-striped table-bordered table-hover" id="tenantlist">
               <thead class="bordered-orange">
                  <tr>
                    <th> 代码 </th>
                    <th> 全称 </th>
                    <th> 简称 </th>
                    <th> 地址 </th>
                    <th> 电话 </th>
                    <th> 法人代表 </th>
                    <th> 状态 </th>
                    <th> 操作 </th>
                  </tr>
                </thead>
              </table>
      	    </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<@ui.js>
<#include "/inc/hdbars/button.vm">
<#include "/inc/hdbars/status.vm">
<script type="text/javascript">
$(document).ready(function () {
	//$("#aa").slimScroll({height: 488, alwaysVisible: true, allowPageScroll: true});
	$('#tenantlist').pagination({
		info: true,
		paginate: true,
		url: '/v3/tenants/search',
		columns: [
		    { "data": "code" },
		    { "data": "name" },
		    { "data": "shortName" },
		    { "data": "address" },
		    { "data": "phone" },
		    { "data": "legalPerson" },
		    { "data": null, "sClass": "text-center" },
		    { "data": null, "sClass": "text-center" }
		],
		status: true,
		last: true
	});
});
</script>
</@ui.js>
</@ui.layout>
