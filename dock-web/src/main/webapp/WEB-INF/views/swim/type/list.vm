<@ui.init ["泳馆管理", "泳馆类型管理"], "swim_type"/>

<@ui.layout>
<div class="row">
  <div class="col-lg-12 col-sm-12 col-xs-12">
    <div class="panel search shadow">
      <div class="panel-body bordered-left">
        <form method="post" role="form" action="/v3/swim/type/list.vm">
          <div class=" row">
           <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 form-horizontal">
             <div class="form-group margin-bottom-10">
               <label for="swimTypeName" class="col-md-3 control-label no-padding-right text-nowrap">泳馆类型：</label>
               <div class="col-md-9">
                   <input type="text" value ="${name}" name="name" class="form-control" placeholder="请输入类型名称" />
               </div>
             </div>
           </div> 
           <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 form-horizontal">
             <div class="text-align-left">
                 <button type="button" class="btn btn-info" id="query_but"><i class="fa fa-search"></i> 查询</button>
                 <button type="button" class="btn btn-default"  id="reset_but" name="reset"><i class="fa fa-undo"></i> 重置</button>
             </div>
           </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="panel">
      <div class="panel-body">
     	<div class="row">
		  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-horizontal">
			<div class="buttons-preview">
				<a class="btn btn-danger" href="/v3/swim/type/new"><i class="fa fa-plus"></i> 新增 </a>
			</div>
		  </div>
	    </div>
	    <div class="row">
	      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-horizontal">
            <table width="100%" class="table table-striped table-bordered table-hover" id="swimTypeList">
              <thead class="bordered-orange">
                <tr>
                  <th> 类型编码 </th>
                  <th> 类型名称名称 </th>
                  <th> 创建日期 </th>
                  <th> 状态 </th>
                  <th> 操作 </th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<@ui.js>
<#include "/inc/hdbars/button.vm">
<#include "/inc/hdbars/status.vm">
<script type="text/javascript">

// 加载列表数据
function initTableLis(){
	var p_param = {};
	p_param.disabled = 0;
	var v_name = $("input[name='name']").val();
	p_param.name = v_name;
	$('#swimTypeList').pagination({
		info: true,
		paginate: true,
		paremeters:p_param,
		url: '/v3/swim/types/search',
		columns: [
		    { "data": "id" },
		    { "data": "name" },
		    { "data": "createdTime" },
		    { "data": null, "sClass": "text-center" },
		    { "data": null, "sClass": "text-center"}
		],
		columnDefs: [
		    {
		    	targets: 2,
		    	render: function (data, type, row, meta) {
		    		return $.mTime(data);
		    	}
		    }
		],
		status:true,
		last: true,
		destory: true
	});
}

$(document).ready(function () {
	// 加载table数据
	initTableLis();
	
	// 【查看】按钮注册事件
	$('#swimTypeList tbody').on('click', '.btn-view', function() {
		location.href="/v3/swim/type/view?req_id="+$(this).attr("id");
	});
	
	// 【修改】按钮注册事件
	$('#swimTypeList tbody').on('click', '.btn-edit', function() {
		location.href="/v3/swim/type/edit?req_id="+$(this).attr("id");
	});
	
	// 【删除】按钮注册事件
	$('#swimTypeList tbody').on('click', '.btn-del', function() {
		var v_swimType = $(this).attr("id");
		bootbox.confirm("您确定要删除这条记录?", function(result) {
			$.mAjax({
				url: "/v3/swim/types/"+v_swimType,
				method: "DELETE"
			}, function(json) {
                console.log(json);
                $.mAlert({"message":"删除成功."});
                initTableLis();
			});
		});
	});

	// 【重置】按钮注册事件
	$("#reset_but").click(function(){
		$("input[name='swimTypeName']").val("");
	});
	
	// 【查询】按钮注册事件
	$("#query_but").click(function(){
		//location.href="/v3/swim/type/list?swimTypeName=001";
		initTableLis();
	});
});
</script>
</@ui.js>
</@ui.layout>